<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kspriggs.tools.perfmon"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES"></uses-permission>


    <application
        android:icon="@drawable/perf_launcher"
        android:label="@string/app_name">
        <service android:name="com.kspriggs.tools.perfmon.PerfService" />

        <activity
            android:name="com.kspriggs.tools.perfmon.PerfMonActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.motorola.tools.perfmon.action.LOWMEM" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <activity android:name="com.kspriggs.tools.perfmon.PerfMonActivity$ProcessesActivity" />
        <activity android:name="com.kspriggs.tools.perfmon.PerfMonActivity$ProcessMemInfoActivity" />
    </application>

</manifest>